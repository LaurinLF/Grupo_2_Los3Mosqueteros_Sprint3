    <main class="main-login-register">
        
            <h2 class="title">CREAR PRODUCTO</h2>
           <!-- Nombre del producto (​name​) 
            ●Descripción (​description​) 
            ●Imagen (​image​) 
            ●Categoría (​category​) 
            ●Colores (o cualquier otro campo similar como: tamaños, talles, etc) 
            ●Precio (​price​)-->
            <form class="login-register-form" action="#" method="post">
                <div>
                    <label for="name">Nombre del Producto</label>
                    <input class='control' type="text" id="name" name="name" placeholder="Mesa Ratona">
                </div>
                <div>
                    <label for="description">Descripción</label>
                    <textarea class='control' id="description" name="description" placeholder="Comentario del producto" >
                </div>
                <div>
                    <label for="telephone">Teléfono</label>
                    <input class='control' type="text" id="telephone" name="visitor_telephone" placeholder="3510000000">
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input class='control' type="password" id="password" name="visitor_password" placeholder="Contraseña" required>
                </div>
                <div>
                    <label for="checkpassword">Confirmar contraseña</label>
                    <input class='control' type="password" id="password" name="visitor_password" placeholder="Confirmar contraseña" required>
                </div>
                <div class="login-register-btn">
                    <input class="button" type="submit" value="CREAR">
                    <p>¿Ya tenés cuenta? <a href="/login">Iniciá sesión!</a></p>
                </div>
            </form>   
        </section>
        
    </main>   
   
   
    <footer>
